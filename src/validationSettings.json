{
  "error_types": {
    "required_error": {
      "message": "Field required"
    },
    "value_error": {
      "message": "Invalid input"
    },
    "text": {
      "message": "Invalid input"
    },
    "email": {
      "message": "Enter valid email address"
    },
    "kit_email": {
      "message": "Enter valid KIT email address"
    },
    "number": {
      "message": "Enter integer number"
    },
    "date": {
      "message": "Enter valid date (dd.mm.yyyy)"
    },
    "time": {
      "message": "Enter valid time"
    }
  },
 
  "valid": {
    "message": "No errors"
  },

  "input_types": {
    "password": {
      "type": "text",
      "regex": "^[*]*"
    },
    "text": {
      "type": "text",
      "regex": "^[*]*"
    },
    "email": {
      "type": "email",
      "regex": "^(([^<>()[\\]\\.,;:\\s@\"]+(\\.[^<>()[\\]\\.,;:\\s@\"]+)*)|(\".+\"))@((\\[[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}\\])|(([a-zA-Z\\-0-9]+\\.)+[a-zA-Z]{2,}))$"
    },
    "kit_email": {
      "type": "email",
      "regex": "^\\w+([-+.']\\w+)*@?(student.kit.edu|kit.edu|partner.kit.edu)$"
    },
    "integer": {
      "type": "number",
      "regex": "^[0-9]+$"
    },
    "number": {
      "type": "number",
      "regex": "^[0-9]+$"
    },
    "float": {
      "type": "number",
      "regex": "^[+-]?([0-9]*[.|,])?[0-9]+$"
    },
    "date": {
      "type": "date",
      "regex": "^((\\d\\d\\d\\d|\\d\\d)\\-(0[1-9]|1[0-2]|[1-9])\\-(0[1-9]|[12]\\d|3[01]))$"
    },
    "time": {
      "type": "time",
      "regex": "^([0-1]?[0-9]|2[0-3]):[0-5][0-9]$"
    }          
  }
}